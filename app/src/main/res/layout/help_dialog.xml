<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/green"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:text="Nenhuma Intervenção"
        android:layout_toLeftOf="@+id/image1"
        android:layout_alignTop="@+id/image1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/yellow"
        android:layout_below="@+id/image1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:text="Intervenção Breve"
        android:layout_toLeftOf="@+id/image2"
        android:layout_below="@+id/text1"
        android:layout_alignTop="@+id/image2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/red"
        android:layout_below="@+id/image2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:text="Tratamento Intensivo"
        android:layout_toLeftOf="@+id/image3"
        android:layout_below="@+id/text2"
        android:layout_alignTop="@+id/image3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/gray"
        android:layout_below="@+id/image3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:text="Não Completado"
        android:layout_toLeftOf="@+id/image4"
        android:layout_below="@+id/text3"
        android:layout_alignTop="@+id/image4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>