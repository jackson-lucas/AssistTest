<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- Avaliador -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/tvAvaliador"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Avaliador :"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/etAvaliador"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:ems="10"
            android:layout_weight="4"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:layout_marginLeft="10dp"
            android:focusable="true" />
    </LinearLayout>

    <!-- Cumpridor -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/tvCumpridor"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Cumpridor:"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/etCumpridor"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:ems="10"
            android:layout_weight="4"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <!-- Idade -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/tvIdade"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Idade :"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/etIdade"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:ems="10"
            android:layout_weight="4"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:layout_marginLeft="10dp"
            android:inputType="number" />
    </LinearLayout>

    <!-- Genero -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/tvGenero"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="Genero :"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:id="@+id/rdGenero">

            <RadioButton
                android:id="@+id/rbMasculino"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Masculino"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="4"
                android:checked="true" />
            />

            <RadioButton
                android:id="@+id/rbFemenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminino"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="4" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Salvar"
            android:layout_weight="2.01" />

    </LinearLayout>

    </LinearLayout>